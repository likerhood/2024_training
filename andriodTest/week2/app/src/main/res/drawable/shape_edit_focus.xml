<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

<!--    内部填充颜色-->
    <solid android:color="@color/white"/>
<!--形状轮廓的粗细和颜色-->
    <stroke
        android:width="2dp"
        android:color="#0000ff"/>

<!--    指定形状四个圆角的半径-->
    <corners android:radius="5dp"/>
<!--    间距-->
    <padding
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"/>

</shape>