<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_layout_height"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/item_layout_height"
            android:text="    书籍："
            android:textSize="@dimen/common_font_size"
            android:textColor="@color/black"
            android:gravity="center"/>

        <EditText
            android:id="@+id/roomtest_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@drawable/edittext_selector"
            android:hint="请输入书籍名称"
            android:inputType="text"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:textSize="@dimen/common_font_size"
            tools:ignore="TouchTargetSizeCheck" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/item_layout_height"
            android:text="    作者："
            android:textSize="@dimen/common_font_size"
            android:textColor="@color/black"
            android:gravity="center"/>

        <EditText
            android:id="@+id/roomtest_author"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@drawable/edittext_selector"
            android:hint="请输入作者姓名"
            android:inputType="text"
            android:maxLength="3"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:textSize="@dimen/common_font_size"
            tools:ignore="TouchTargetSizeCheck" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/item_layout_height"
            android:text="出版社："
            android:textSize="@dimen/common_font_size"
            android:textColor="@color/black"
            android:gravity="center"/>

        <EditText
            android:id="@+id/roomtest_press"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@drawable/edittext_selector"
            android:hint="请输入出版社"
            android:inputType="text"
            android:maxLength="3"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:textSize="@dimen/common_font_size"
            tools:ignore="TouchTargetSizeCheck" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/item_layout_height"
            android:text="    价格："
            android:textSize="@dimen/common_font_size"
            android:textColor="@color/black"
            android:gravity="center"/>

        <EditText
            android:id="@+id/roomtest_price"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@drawable/edittext_selector"
            android:hint="请输入价格"
            android:inputType="number"
            android:maxLength="3"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:textSize="@dimen/common_font_size"
            tools:ignore="TouchTargetSizeCheck" />

    </LinearLayout>


    <Button
        android:id="@+id/roomtest_add"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_layout_height"
        android:text="添加"
        android:textSize="@dimen/common_font_size"/>

    <Button
        android:id="@+id/roomtest_delete"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_layout_height"
        android:text="删除"
        android:textSize="@dimen/common_font_size"/>

    <Button
        android:id="@+id/roomtest_update"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_layout_height"
        android:text="修改"
        android:textSize="@dimen/common_font_size"/>

    <Button
        android:id="@+id/roomtest_query"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_layout_height"
        android:text="查询"
        android:textSize="@dimen/common_font_size"/>

    <TextView
        android:id="@+id/room_tv_show"
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:background="@color/textBackground"/>


</LinearLayout>